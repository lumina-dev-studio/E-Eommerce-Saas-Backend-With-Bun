{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",            // Use ESNext for modern JavaScript syntax
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler", // Use bundler for module resolution
    "verbatimModuleSyntax": true,   // Preserve module syntax as is
    "outDir": "./dist",             // Output directory for compiled files
    "noEmit": false,                // Allow emitting files

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["*"],         // Include index.ts for compilation
  "exclude": ["node_modules"]
}

